%Main scripts project sheet 2
%%
%2.1 SPP model
close all, clear
p = 0.3;
q = 0.3;
N = 50;
eta = 0.1;
L = 20;
R = 2;
delta = 0.5; 
T = 100;

P0 = zeros(3,N);
for i = 1:N;
    P0(1,i) = round(rand*L) + 1;
    P0(2,i) = round(rand*L) + 1;
    P0(3,i) = round(rand*2*pi);
end

[x,y] = sppm(p,q,N,P0,eta,L,R,T,delta);

for i = 1:T
    plot(x(i,:)
end